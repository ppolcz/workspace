<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <DatePicker
            android:id="@+id/trform_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <EditText
            android:id="@+id/trform_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trform_date"
            android:hint="@string/trform_amount"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/trform_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trform_amount"
            android:hint="@string/trform_remark" />

        <Spinner
            android:id="@+id/trform_caid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trform_remark" />

        <Spinner
            android:id="@+id/trform_cluster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trform_caid" />

        <Spinner
            android:id="@+id/trform_mkname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trform_cluster" />

        <LinearLayout
            android:id="@+id/trform_pilist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trform_mkname"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/_strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/trform_pilist"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/trform_newpi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/_strut"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@id/_strut"
            android:layout_below="@+id/_strut"
            android:text="@string/new_product" />

        <Button
            android:id="@+id/trform_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/_strut"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@id/_strut"
            android:layout_below="@+id/_strut"
            android:text="@android:string/ok" />
    </RelativeLayout>

</ScrollView>