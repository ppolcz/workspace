<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="@dimen/list_item_horizontal_margin"
    android:paddingTop="@dimen/list_item_vertical_margin" >

    <ImageView
        android:id="@+id/iw"
        android:layout_width="@dimen/list_item_icon_width"
        android:layout_height="@dimen/list_item_icon_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photograph"
        android:src="@drawable/polpe" />

    <CheckBox
        android:id="@+id/chbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tw_name"
        style="@style/item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iw"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/chbox"
        android:layout_toRightOf="@+id/iw"
        android:text="@string/sample_long_name" />

    <TextView
        android:id="@+id/tw_telnr"
        style="@style/item_telnr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iw"
        android:layout_alignLeft="@+id/tw_name"
        android:layout_below="@+id/tw_name"
        android:layout_toLeftOf="@+id/chbox"
        android:gravity="center_vertical"
        android:text="@string/sample_telnr" />

</RelativeLayout>