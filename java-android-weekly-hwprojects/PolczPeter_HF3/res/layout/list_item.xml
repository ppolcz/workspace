<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/marker_view_margin"
    android:paddingLeft="@dimen/marker_view_margin"
    android:paddingRight="@dimen/marker_view_margin"
    android:paddingTop="@dimen/marker_view_margin" >

    <ImageView
        android:id="@+id/iw"
        android:layout_width="@dimen/list_item_icon_width"
        android:layout_height="@dimen/list_item_icon_height"
        android:contentDescription="@string/photograph"
        android:src="@drawable/polpe" />

    <TextView
        android:id="@+id/tw_name"
        style="@style/item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iw"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iw"
        android:text="@string/my_name" />

    <TextView
        android:id="@+id/tw_poet"
        style="@style/item_poet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iw"
        android:layout_alignLeft="@+id/tw_name"
        android:layout_below="@+id/tw_name"
        android:layout_toRightOf="@+id/iw"
        android:gravity="center_vertical"
        android:text="@string/my_poet" />

</RelativeLayout>