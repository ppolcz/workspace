<?xml version="1.0" encoding="utf-8"?>
<fr.marvinlabs.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_as_marvinlabs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" 
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp">

    <fr.marvinlabs.widget.InertCheckBox
        android:id="@+id/chbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox"
        android:focusable="false" />

    <TextView
        android:id="@+id/tw_name"
        style="@style/item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/chbox"
        android:layout_alignParentLeft="true"
        android:text="@string/sample_long_name" />

    <TextView
        android:id="@+id/tw_address"
        style="@style/item_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tw_name"
        android:layout_below="@+id/tw_name"
        android:layout_toLeftOf="@+id/chbox"
        android:gravity="center_vertical"
        android:text="@string/sample_address" />

</fr.marvinlabs.widget.CheckableRelativeLayout>